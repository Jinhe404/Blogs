<div>
<button onclick="returnTop()" id="btnTop" title="返回顶部"><img src="top.jpg"></button>
</div>
<div id="app">文档正在努力加载中...</div>
<script>
    window.$docsify = {
            name: '',
            repo: '',
            coverpage: true,
            onlyCover: true,
            loadNavbar: true,
            loadSidebar: true,
            subMaxlevel: 3,
            auto2top: true,


            }
</script>
<script>
    window.onscroll = function () {
            scollFunction()
            };
            function scollFunction() {
            if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 60) {
            document.getElementById("btnTop").style.display = "block";
            } else {
            document.getElementById("btnTop").style.display = "none";
            }
            }
            function returnTop() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
            }

</script>
